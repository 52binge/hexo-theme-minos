<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, date_format) %></time>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h11 class="desc-index">
      <%= post.description %>
      <!--<a class="</strong></a>-->
      <!--<a>
      <div = post.date  </div>
      </a>-->
    </h11>
  <% } else { %>
    <h11 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h11>
  <% } %>
<% } %>
